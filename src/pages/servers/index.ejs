<div class="serverContainer">
  <h3><i class="fa-solid fa-clock"></i> <b>Recently Bumped Servers</b></h3>
  <p>These are the most recently bumped servers.</p>
  <% let allservers = servers %>
  <% let bumped = allservers.sort((a,b) => b.bump - a.bump) %>
  <% for(let i = 0; i < bumped.length; i++){ %>
  <%  if (i === 8) break; %>
  <div class="card" style="border-radius:10px;">
    <img src="<%= bumped[i].icon %>" alt="<%= bumped[i].name %>'s Icon" draggable="false" class="botimg_main">
    <p class="botname_main" style="height:75px;width:250px;padding:10px;"> 
    <%= bumped[i].name %><br>
      <span style="font-size:15px; font-weight:normal;"><i class="fa-solid fa-user-group"></i> <%= bumped[i].memberCount.toLocaleString().replace(",", ",") %> • <i class="fa-solid fa-bomb"></i> <%= bumped[i].bumps %> • <i class="fa-solid fa-check-to-slot"></i> <%= bumped[i].votes %></span>
    </p>
    <div class="botdesc_main" style="height:75px;width:auto;flex:auto;padding:10px;">
      <i class="fa-solid fa-file-lines"></i> <%= bumped[i].shortDesc %>
      </div>
    <div class="bottags_main" style="height:75px;width:auto;flex:auto;padding:10px;">
      <i class="fa-solid fa-hashtag"></i> <%= bumped[i].tags %>
    </div>
  
    <div style="margin-left:20px;margin-top:-50px">
      <a href="/servers/<%= bumped[i].id %>/">
        <button class="viewbtn">View</button>
    </div></a>
    <a target="_blank" href="/servers/<%= bumped[i].id %>/join">
      <button class="joinbtn">Join</button></a>
  </div></a>
  <% } %><br><br><br><br><br>
