<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/marked/1.1.0/marked.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/sanitize-html/1.26.0/sanitize-html.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>
  <title>Editing <%= fetched_user.username %> - Universe List</title>
  <%- include("./parts/head.ejs") %> <!-- Corrected path -->
</head>

<body>
  <%- include("./parts/navbar.ejs") %> <!-- Corrected path -->
    <div class="container">
      <h2 style="color:white;margin-top: 175px;"><b>Edit Profile</b></h2>
      <p style="color:white;font-size: 20">Fill out the form below in order to edit your profile.</p><br><br>
      <div class="form">
        <form action="/users/<%= fetched_user.id %>/edit" method="POST">
          <div class="form-group">
            <label for="bio">Biography</label>
            <input type="text" class="form-control" value="<%= fetched_user.bio %>" name="bio" id="bio"
              placeholder="A 13 year old who turns coffee into code." autocomplete="off" required>
          </div>
          <div class="form-group">
            <label for="website">Website</label>
            <input type="url" class="form-control" value="<%= fetched_user.website %>" id="website" name="website"
              placeholder="https://ishaantek.com" autocomplete="off">
          </div>
          <div class="form-group">
            <label for="github">GitHub</label>
            <div class="input-group-prepend">
              <span style="border-radius: 4px;" class="input-group-text">https://github.com/</span>
              <input style="border-radius: 4px;" type="text" class="form-control" value="<%= fetched_user.github %>"
                name="github" id="github" placeholder="ishaantek" autocomplete="off">
            </div>
          </div>
          <div class="form-group">
            <label for="twitter">Twitter</label>
            <div class="input-group-prepend">
              <span style="border-radius: 4px;" class="input-group-text">https://twitter.com/</span>
              <input style="border-radius: 4px;" type="text" class="form-control" value="<%= fetched_user.twitter %>"
                name="twitter" id="twitter" placeholder="ishaantek" autocomplete="off">
            </div>
          </div><br>
          <button type="submit" class="bluebtn"><i class="fa-solid fa-paper-plane"></i>&nbsp;&nbsp;Edit</button>
        </form>
      </div>
      <br><br>
    </div>
    <br><br><br><br><br>

    <style>
      .form-group.required label:after {
        content: " *";
        color: red;
      }
    </style>
</body>

</html>