          <% } %>
          <% if (bot.github) { %>
            <a target="blank" href="<%= bot.github %>" type="button" style="border-radius: 5px;" class="btn btn-info pr-3 pl-3 mr-1"><i
                class="fa-brands fa-github"></i> Github</a>
            <% } %>
          <% if (bot.donate) { %>
            <a target="blank" href="<%= bot.donate %>" type="button" style="border-radius: 5px;" class="btn btn-info pr-3 pl-3 mr-1"><i class="fa-solid fa-circle-dollar-to-slot"></i> Donate</a>
            <% } %>
